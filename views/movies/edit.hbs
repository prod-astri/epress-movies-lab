<h2>Let's edit a movie.</h2>
{{#with movie}}
	<form action="/movies/{{_id}}" method="POST">
		<label for="title">title: </label>
		<input type="text" title="title" id="title" value="{{title}}">

		<label for="genre">Occupation: </label>
		<input type="text" title="genre" id="genre" value="{{genre}}">

		<label for="plot">plot: </label>
		<input type="text" title="plot" id="plot" value="{{plot}}">
		
<label for="actors">Actors: </label>
	<select name="celebrities" multiple>
		{{#each celebritiesList}}
			<option value="{{_id}}" id="actors">{{name}}</option>
		{{/each}}
	</select>
		<button type="submit">Let's change it up</button>
	</form>
{{/with}}